{
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/node_modules": true
  },

  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true
  },

  // Copilot / Codex: asistido, NO autónomo
  "github.copilot.chat.enabled": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.experimental.agent": false,

  // Evitar ejecuciones implícitas
  "npm.enableRunFromFolder": false
}
