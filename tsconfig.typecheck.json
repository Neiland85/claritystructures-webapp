    "tsBuildInfoFile": "./.cache/tsconfig.typecheck.tsbuildinfo",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "noEmit": false
