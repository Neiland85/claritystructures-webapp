{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "tsBuildInfoFile": "./.cache/tsconfig.typecheck.tsbuildinfo",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "noEmit": false
  },
  "include": [
    "src",
    "tests",
    "scripts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "out",
    "coverage"
  ]
}
