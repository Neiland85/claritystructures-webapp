{
  "name": "claritystructures-webapp",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "build": "pnpm -r run build",
    "db:generate": "prisma generate --config prisma.config.ts",
    "db:migrate": "prisma migrate dev --config prisma.config.ts",
    "db:studio": "prisma studio --config prisma.config.ts",
    "typecheck": "pnpm -r run typecheck",
    "test": "node --import tsx --test tests/decision.spec.ts tests/decision.snapshot.spec.ts tests/intake-funnel.integration.spec.ts",
    "test:watch": "node --import tsx --test --watch tests/decision.spec.ts tests/decision.snapshot.spec.ts tests/intake-funnel.integration.spec.ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@vitest/coverage-v8": "^3.0.5",
    "dotenv": "^16.4.7",
    "prisma": "^7.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.0.5"
  },
  "pnpm": {
    "overrides": {
      "lodash": ">=4.17.23",
      "hono": ">=4.11.7"
    }
  }
}
