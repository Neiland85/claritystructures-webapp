{
  "name": "claritystructures-webapp",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "eslint .",
    "db:generate": "prisma generate --config prisma.config.ts",
    "db:migrate": "prisma migrate dev --config prisma.config.ts",
    "db:studio": "prisma studio --config prisma.config.ts",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:domain": "vitest run packages/domain",
    "test:integration": "vitest run tests/integration",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint:fix": "eslint --fix ."
  },
  "devDependencies": {
    "@claritystructures/domain": "workspace:*",
    "@next/bundle-analyzer": "^16.1.6",
    "@prisma/client": "^7.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.4",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^4.0.18",
    "dotenv": "^16.4.7",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prisma": "^7.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.5"
  },
  "pnpm": {
    "overrides": {
      "lodash": ">=4.17.23",
      "hono": ">=4.11.7"
    }
  },
  "dependencies": {
    "@sentry/nextjs": "^10.38.0",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "isomorphic-dompurify": "3.0.0-rc.2",
    "next": "16.1.6",
    "resend": "^6.9.2",
    "zod": "^4.3.6"
  }
}
