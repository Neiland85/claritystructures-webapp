{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@claritystructures/*": ["packages/*/src"],
      "@/*": ["apps/web/src/*"]
    }
  },
  "include": [
    "apps/web/src/**/*",
    "packages/types/src/**/*",
    "packages/domain/src/**/*",
    "packages/infra-notifications/src/**/*",
    "packages/infra-persistence/src/**/*",
    "prisma.config.ts",
    "vitest.config.ts"
  ]
}
