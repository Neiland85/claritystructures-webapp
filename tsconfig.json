{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@claritystructures/types": ["packages/types/src"],
      "@claritystructures/domain": ["packages/domain/src"],
      "@/*": ["apps/web/src/*"]
    }
  },
  "include": [
    "apps/web/src/**/*",
    "packages/types/src/**/*",
    "packages/domain/src/**/*"
  ]
}
